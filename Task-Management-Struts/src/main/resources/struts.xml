<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<package name="default" extends="struts-default">
		<action name="addTaskAction" class="com.example.addTaskAction"
			method="post">
			<result name="success">/index.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<action name="updateTaskAction" class="com.example.updateTaskAction"
			method="post">
			<result name="success">/displayTask.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
		<action name="deleteTaskAction" class="com.example.deleteTaskAction"
			method="post">
			<result name="success">/displayTask.jsp</result>
			<result name="error">/error.jsp</result>
		</action>
	</package>
</struts>